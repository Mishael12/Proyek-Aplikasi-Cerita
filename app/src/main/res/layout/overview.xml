<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/ion_notifcations__1_"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginStart="15dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/vector__3_"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/textView2"
        android:layout_marginTop="25dp"
        android:layout_width="274dp"
        android:layout_height="47dp"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:text="Create"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="620dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Overview"
                android:textStyle="bold"
                android:textSize="20dp"/>


            <ImageView
                android:id="@+id/Gambar"
                android:layout_width="341dp"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="0dp"

                />
            <TextView
                android:id="@+id/viewJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textSize="18dp"
                android:fontFamily="@font/poppinsmedium"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:text="By Radwimps"
                android:textSize="12dp"
                android:fontFamily="@font/poppinsmedium"/>

            <TextView
                android:id="@+id/btnGenreRead"
                android:layout_width="78dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/genre"
                android:gravity="center"
                android:text=""
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtQtyParRead" />

            <TextView
                android:id="@+id/btnAccess"
                android:layout_width="78dp"
                android:layout_height="25dp"
                android:layout_marginStart="130dp"
                android:layout_marginTop="-25dp"
                android:background="@drawable/genre"
                android:gravity="center"
                android:text="Restricted"
                android:textSize="12dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtQtyParRead" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lineseperate"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="35dp"/>
            <TextView
                android:id="@+id/DecsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="-0dp"
                android:text=""
                android:textSize="11dp"
                android:textAlignment="textStart"
                android:fontFamily="@font/poppinsmedium"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/isi"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="35dp"/>

            <TextView
                android:id="@+id/TxtViewCerita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="-0dp"
                android:text=""
                android:textSize="11dp"
                android:textAlignment="textStart"
                android:fontFamily="@font/poppinsmedium"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/SubmitBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="280dp"
                android:background="@drawable/next"
                android:paddingStart="20dp"
                android:paddingEnd="15dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/prevbtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="-40dp"
                android:layout_marginStart="28dp"
                android:background="@drawable/next"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:text="Prev"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:drawableStart="@drawable/baseline_keyboard_arrow_left_24"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>