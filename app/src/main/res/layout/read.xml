<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.Read"
    >

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintBottom_toTopOf="@+id/cardViewImgHolder"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/ion_notifcations__1_"
        app:layout_constraintBottom_toTopOf="@+id/cardViewImgHolder"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="274dp"
        android:layout_height="47dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:text="Read"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewImgHolder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImgHolder"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgPosterRead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtJudulRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Judul Cerita"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewImgHolder" />

    <TextView
        android:id="@+id/txtPembuatRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="5dp"
        android:text="by Author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtJudulRead" />

    <TextView
        android:id="@+id/txtQtyParRead"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/vector__1_"
        android:drawablePadding="10dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPembuatRead" />

    <TextView
        android:id="@+id/txtLikeRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:drawableStart="@drawable/mdi_like_outline"
        android:drawablePadding="10dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/txtQtyParRead"
        app:layout_constraintTop_toTopOf="@+id/txtQtyParRead" />

    <TextView
        android:id="@+id/txtDateCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:text="01/01/2003"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtLikeRead" />

    <TextView
        android:id="@+id/btnGenreRead"
        android:layout_width="78dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/genre"
        android:gravity="center"
        android:text="Sejarah"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQtyParRead" />
    <TextView
        android:id="@+id/chipAccess"
        android:layout_width="78dp"
        android:layout_height="25dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/genre"
        android:gravity="center"
        android:text="Restricted"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQtyParRead" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="375dp"
        android:layout_height="122dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:isScrollContainer="true"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGenreRead">
    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout7"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="371dp"
        android:layout_height="98dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:hint="Continue the Story"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputLayout9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/btnSubmitReadPublic"
        android:layout_width="89dp"
        android:layout_height="26dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/genre"
        android:drawableLeft="@drawable/vector__2_"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="Submit"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout7" />

    <TextView
        android:id="@+id/follow"
        android:layout_width="89dp"
        android:layout_height="26dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/genre"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="Follow"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout7" />
</androidx.constraintlayout.widget.ConstraintLayout>